            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/genre_box"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/new_box"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/box"
                android:padding="15dp">

                <TextView
                    android:id="@+id/box_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toEndOf="@+id/imageView6"
                    android:layout_toRightOf="@+id/imageView6"
                    android:text="@string/genres"
                    android:textColor="#455786"
                    android:textSize="18sp"
                    tools:ignore="DuplicateIds" />

                <TextView
                    android:id="@+id/box_slug"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/box_title"
                    android:layout_alignStart="@+id/box_title"
                    android:layout_alignLeft="@+id/box_title"
                    android:text="@string/genres_slug"
                    tools:ignore="DuplicateIds" />

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="30dp"
                    android:layout_height="40dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:padding="5dp"
                    app:srcCompat="@drawable/cd" />

                <RelativeLayout
                    android:id="@+id/genresLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/box_slug"
                    android:layout_marginTop="12dp">

                    <GridView
                        android:id="@+id/genresGrid"
                        android:layout_width="match_parent"
                        android:layout_height="380dp"
                        android:horizontalSpacing="10dp"
                        android:numColumns="3"
                        android:scrollbars="none"
                        android:stretchMode="columnWidth"
                        android:verticalSpacing="5dp" />
                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>

</FrameLayout>
