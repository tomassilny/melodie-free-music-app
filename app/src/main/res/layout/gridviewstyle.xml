<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="5dp"
    android:paddingTop="5dp">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/thumb"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:padding="5dp"
        android:scaleType="centerCrop"
        app:riv_corner_radius="10px" />


    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:padding="5dp">

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="150dp"
            android:foreground="?android:selectableItemBackground"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:background="@drawable/gradient" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/second_txt"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_weight=".5"
            android:ellipsize="end"
            android:maxLines="2"
            android:paddingLeft="8dp"
            android:text="Loading..."
            android:textColor="#fff"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/second_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:paddingBottom="8dp"
            android:paddingLeft="8dp"
            android:text="Loading..."
            android:textColor="#fff"
            android:textSize="10sp" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignBottom="@+id/imageView7"
            android:layout_alignEnd="@+id/imageView7"
            android:layout_alignRight="@+id/imageView7"
            android:padding="10dp"
            app:srcCompat="@drawable/playlist" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/more"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignEnd="@+id/thumb"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/thumb"
        android:layout_gravity="center_vertical"
        android:layout_margin="5dp"
        android:padding="5dp"
        app:srcCompat="@drawable/more_white" />

</RelativeLayout>